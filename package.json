{
  "name": "delight-chat-backend",
  "version": "1.0.0",
  "description": "Multi-tenant omni-channel helpdesk API backend",
  "private": true,
  "scripts": {
    "build": "nest build",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:clear": "ts-node prisma/clear.ts",
    "seed": "ts-node prisma/seed.ts",
    "worker:inbound": "ts-node src/workers/inbound.worker.ts",
    "worker:outbound": "ts-node src/workers/outbound.worker.ts",
    "worker:campaigns": "ts-node src/workers/campaign.worker.ts",
    "worker:analytics": "ts-node src/workers/analytics.worker.ts",
    "setup:channels": "ts-node scripts/setup-channels.ts",
    "test": "jest",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/bull": "latest",
    "@nestjs/common": "latest",
    "@nestjs/config": "latest",
    "@nestjs/core": "latest",
    "@nestjs/jwt": "latest",
    "@nestjs/passport": "latest",
    "@nestjs/platform-express": "latest",
    "@nestjs/swagger": "latest",
    "@nestjs/websockets": "latest",
    "@prisma/client": "latest",
    "@types/nodemailer": "^7.0.4",
    "bcryptjs": "latest",
    "bull": "latest",
    "bullmq": "latest",
    "class-transformer": "latest",
    "class-validator": "latest",
    "dotenv": "^17.2.3",
    "helmet": "latest",
    "imapflow": "^1.1.1",
    "ioredis": "latest",
    "mailparser": "^3.9.0",
    "nodemailer": "^7.0.10",
    "passport": "latest",
    "passport-jwt": "latest",
    "pino": "latest",
    "prisma": "latest",
    "reflect-metadata": "latest",
    "rxjs": "latest",
    "uuid": "latest"
  },
  "devDependencies": {
    "@nestjs/cli": "latest",
    "@nestjs/testing": "latest",
    "@types/bcryptjs": "latest",
    "@types/node": "^22",
    "@types/passport-jwt": "latest",
    "@types/supertest": "latest",
    "@types/uuid": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "jest": "latest",
    "supertest": "latest",
    "ts-node": "latest",
    "typescript": "^5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
